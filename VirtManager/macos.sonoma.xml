<domain xmlns:qemu="http://libvirt.org/schemas/domain/qemu/1.0" type="kvm">
  <name>MacOS.Sonoma</name>
  <uuid>e248bf4a-15ba-4837-8d02-20f927ba8b59</uuid>
  <memory unit="KiB">67108864</memory> <!-- 64 GB -->
  <currentMemory unit="KiB">67108864</currentMemory>
  <vcpu placement="static" current="10">10</vcpu>
  <iothreads>2</iothreads>
  <cputune>
    <!-- Pin to first five cores and their corresponding hyperthreads -->
    <vcpupin vcpu="0" cpuset="0" />
    <vcpupin vcpu="1" cpuset="10" />
    <vcpupin vcpu="2" cpuset="1" />
    <vcpupin vcpu="3" cpuset="11" />
    <vcpupin vcpu="4" cpuset="2" />
    <vcpupin vcpu="5" cpuset="12" />
    <vcpupin vcpu="6" cpuset="3" />
    <vcpupin vcpu="7" cpuset="13" />
    <vcpupin vcpu="8" cpuset="4" />
    <vcpupin vcpu="9" cpuset="14" />
    <!-- ... vCPU pinning ... -->
    <emulatorpin cpuset="15-16" />
    <iothreadpin iothread="1" cpuset="15" />
    <iothreadpin iothread="2" cpuset="16" />
  </cputune>
  <cpu mode="host-passthrough" check="none">
    <topology sockets="1" cores="5" threads="2" />
    <cache mode="passthrough" />
  </cpu>
  <os>
    <type arch="x86_64" machine="pc-q35-8.1">hvm</type>
    <boot dev="hd" />
    <loader readonly="yes" type="pflash">/var/lib/virtual-machines/OSX-KVM/OVMF_CODE.fd</loader>
    <nvram>/var/lib/virtual-machines/OSX-KVM/OVMF_VARS-1920x1080.fd</nvram>
  </os>
  <features>
    <acpi />
    <apic />
    <vmport state="off" />
  </features>
  <clock offset="utc">
    <timer name="rtc" tickpolicy="catchup" />
    <timer name="pit" tickpolicy="delay" />
    <timer name="hpet" present="no" />
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2" />
      <source file="/var/lib/virtual-machines/OSX-KVM/OpenCore/OpenCore.qcow2" />
      <target dev="sda" bus="sata" />
      <address type="drive" controller="0" bus="0" target="0" unit="0" />
    </disk>
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2" />
      <source file="/var/lib/virtual-machines/OSX-KVM/mac_hdd_ng.img" />
      <target dev="sdc" bus="sata" />
      <address type="drive" controller="0" bus="0" target="0" unit="1" />
    </disk>
    <disk type="file" device="cdrom">
      <driver name="qemu" type="raw" />
      <source file="/var/lib/virtual-machines/OSX-KVM/BaseSystem.img" />
      <target dev="sdb" bus="sata" />
      <address type="drive" controller="0" bus="0" target="0" unit="2" />
      <readonly />
    </disk>
    <input type='evdev'>
      <source dev='/dev/input/by-id/usb-Logitech_USB_Receiver-if02-event-mouse' />
    </input>
    <input type='evdev'>
      <source dev='/dev/input/by-id/usb-Logitech_USB_Receiver-if01-event-kbd' grab='all' repeat='on'
        grabToggle='ctrl-ctrl' />
    </input>
    <interface type="network">
      <mac address="52:54:00:26:44:6b" />
      <source network="default" />
      <model type="e1000" />
      <address type="pci" domain="0x0000" bus="0x02" slot="0x01" function="0x0" />
    </interface>
    <console type="pty" />
    <sound model="ich6" />
    <video>
      <model type="qxl" />
    </video>
    <hostdev mode="subsystem" type="pci" managed="yes">
      <source>
        <address domain="0x0000" bus="0x05" slot="0x00" function="0x0" />
      </source>
      <address type="pci" domain="0x0000" bus="0x03" slot="0x00" function="0x0" />
    </hostdev>
    <hostdev mode="subsystem" type="pci" managed="yes">
      <source>
        <address domain="0x0000" bus="0x05" slot="0x00" function="0x1" />
      </source>
      <address type="pci" domain="0x0000" bus="0x04" slot="0x00" function="0x0" />
    </hostdev>
  </devices>
  <qemu:commandline>
    <qemu:arg value="-device" />
    <qemu:arg
      value="isa-applesmc,osk=&quot;ourhardworkbythesewordsguardedpleasedontsteal(c)AppleComputerInc&quot;" />
    <!-- Additional QEMU arguments if needed -->
  </qemu:commandline>
</domain>